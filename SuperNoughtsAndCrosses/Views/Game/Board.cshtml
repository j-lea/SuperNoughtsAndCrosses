@model SuperNoughtsAndCrosses.models.GameBoard;

<script type="text/javascript">
    var playTile = function(btn) {
        var tileRow = btn.getAttribute("row");
        var tileCol = btn.getAttribute("col");

        var board = btn.parentElement.parentElement;
        var boardRow = board.getAttribute("row");
        var boardCol = board.getAttribute("col");
        
        $('.super-board').load(
            '@Url.Action("PlayTile", $"Game", null)?tileRow=' + tileRow + '&tileCol=' + tileCol + '&boardRow=' + boardRow + '&boardCol=' + boardCol);
    }
</script>

@for (var row = 0; row < Model.GetSize(); row++)
{
    <div class="row row-@(row)">
        @for (var col = 0; col < Model.GetSize(); col++)
        {
            <button class="tile tile-@(col)" row="@row" col="@col" onclick="playTile(this)">
                @Model.GetSymbolForTile(row, col)
            </button>
        }
    </div>
}